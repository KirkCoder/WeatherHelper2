<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainLocationWeatherFragment">

    <fragment
        android:id="@+id/MainLocationWeatherFragment"
        android:name="com.example.weatherhelper.mainweather.view.MainLocationWeatherFragment"
        android:label="@string/main_location_weather_fragment_label"
        tools:layout="@layout/main_location_weather">
    </fragment>

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.weatherhelper.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.weatherhelper.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>
