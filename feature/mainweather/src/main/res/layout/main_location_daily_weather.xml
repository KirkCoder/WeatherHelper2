<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/std_margin"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dt"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/small_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="dt"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/night"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginRight="@dimen/std_margin"
        android:text="@string/night"
        android:layout_width="wrap_content"
        tools:text="night"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/night_temp"
        app:layout_constraintRight_toRightOf="@id/night"
        app:layout_constraintTop_toBottomOf="@id/night"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/night"
        android:layout_marginTop="@dimen/small_margin"
        tools:text="24"
        android:layout_height="wrap_content"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/day"
        app:layout_constraintRight_toLeftOf="@id/night"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginRight="@dimen/std_margin"
        android:text="@string/day"
        android:layout_width="wrap_content"
        tools:text="day"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/day_temp"
        app:layout_constraintRight_toRightOf="@id/day"
        app:layout_constraintTop_toBottomOf="@id/day"
        app:layout_constraintLeft_toLeftOf="@id/day"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        tools:text="25"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/day"
        android:layout_margin="@dimen/std_margin"
        tools:srcCompat="@drawable/cloud"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_height="@dimen/std_font_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>
