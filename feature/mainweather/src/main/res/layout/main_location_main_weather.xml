<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/feels_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_margin"
        android:textSize="@dimen/feels_like_font_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Feels like 78" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/std_margin"
        android:textSize="@dimen/temperature_font_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feels_like"
        tools:text="25" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/temperature_font_size"
        tools:srcCompat="@drawable/cloud"
        android:layout_margin="@dimen/std_margin"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/temperature"
        app:layout_constraintTop_toTopOf="@+id/temperature"
        app:layout_constraintLeft_toRightOf="@id/temperature" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_margin"
        android:textSize="@dimen/description_font_size"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="description"
        app:layout_constraintTop_toBottomOf="@id/temperature" />

    <TextView
        android:id="@+id/wind"
        app:layout_constraintTop_toTopOf="@id/temperature"
        app:layout_constraintLeft_toRightOf="@+id/weather_icon"
        android:layout_marginLeft="@dimen/std_margin"
        tools:text="wind 10 м/с"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Barrier
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/wind_barrier"
        android:visibility="invisible"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="wind" />

    <TextView
        android:id="@+id/clouds"
        app:layout_constraintTop_toBottomOf="@id/wind_barrier"
        app:layout_constraintLeft_toRightOf="@+id/weather_icon"
        android:layout_marginLeft="@dimen/std_margin"
        android:layout_marginTop="@dimen/std_margin"
        tools:text="clouds 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Barrier
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/clouds_barrier"
        app:barrierDirection="bottom"
        android:visibility="invisible"
        app:constraint_referenced_ids="clouds" />

    <TextView
        android:id="@+id/rain"
        app:layout_constraintTop_toBottomOf="@id/clouds_barrier"
        app:layout_constraintLeft_toRightOf="@+id/weather_icon"
        android:layout_marginLeft="@dimen/std_margin"
        android:layout_marginTop="@dimen/std_margin"
        tools:text="rain 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
